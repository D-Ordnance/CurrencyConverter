<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/tool_bar"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nav_bar"
            android:src="@drawable/ic_drawer_icon"
            app:tint="@color/green"
            android:padding="8dp"/>
        <com.deeosoft.currencyconverter.custom.CTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Sign Up"
            android:textSize="20sp"
            android:id="@+id/sign_up"
            android:textColor="@color/green"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <com.deeosoft.currencyconverter.custom.CTextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency_calculator"
                android:textColor="@color/blue"
                android:textSize="35sp"/>
            <com.deeosoft.currencyconverter.custom.CTextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:text="@string/dot"
                android:textColor="@color/green"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="14dp"
            android:padding="13dp"
            android:background="@drawable/edit_text_bg">
            <com.deeosoft.currencyconverter.custom.CEditTextRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="26sp"
                android:layout_weight=".7"
                android:background="@null"
                android:text="1" />
            <com.deeosoft.currencyconverter.custom.CTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textColor="@color/edit_text_color"
                android:text="EUR"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="13dp"
            android:background="@drawable/edit_text_bg">
            <com.deeosoft.currencyconverter.custom.CEditTextRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="26sp"
                android:layout_weight=".7"
                android:background="@null"
                android:text="1" />
            <com.deeosoft.currencyconverter.custom.CTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:text="EUR"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spinner_bg"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="10dp"
                android:layout_weight="1"
                android:paddingVertical="9dp"
                android:gravity="center"
                android:layout_gravity="center">
                <androidx.cardview.widget.CardView
                    android:shape="ring"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    app:cardCornerRadius="20dp"
                    android:innerRadius="0dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:id="@+id/from_currency_flag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/flag_eur"/>
                </androidx.cardview.widget.CardView>
                <com.deeosoft.currencyconverter.custom.CTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="EUR"
                    android:textSize="18sp"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:id="@+id/from_currency"
                    android:drawableEnd="@drawable/ic_arrow_down" />
            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_swap"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spinner_bg"
                android:paddingHorizontal="10dp"
                android:layout_weight="1"
                android:paddingVertical="9dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:layout_gravity="center">
                <androidx.cardview.widget.CardView
                    android:shape="ring"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    app:cardCornerRadius="20dp"
                    android:innerRadius="0dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:id="@+id/to_currency_flag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/flag_pln"/>
                </androidx.cardview.widget.CardView>
                <com.deeosoft.currencyconverter.custom.CTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PLN"
                    android:textColor="@color/edit_text_color"
                    android:textSize="18sp"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:id="@+id/to_currency"
                    android:drawableEnd="@drawable/ic_arrow_down" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>